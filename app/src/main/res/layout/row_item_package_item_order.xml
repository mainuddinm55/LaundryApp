<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/service_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:src="@drawable/shirt" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:text="@string/service_name_text"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quantity_decrement_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/quantity_text_view"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="12sp" />

            <Button
                android:id="@+id/quantity_increment_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="+"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/check_box"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        app:color_checked="@color/colorPrimary"
        app:color_unchecked="#EEEEEE" />

</LinearLayout>
